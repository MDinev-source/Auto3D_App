@model Auto3D.Web.ViewModels.Products.ProductDeleteViewModel


@{ this.ViewData["Title"] = "Delete Product"; }
<div class="row justify-content-center">
    <form asp-area="Administration" asp-controller="Products" asp-action="Delete" method="post" class="text-center col-md-4">
        <h4>@this.ViewData["Title"]</h4>
        <hr />
        <fieldset disabled="">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control col-md-12" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBrand"></label>
                <input asp-for="CarBrand" class="form-control col-md-12" value="@Model.CarBrand" />
                <span asp-validation-for="CarBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel"></label>
                <input asp-for="CarModel" class="form-control col-md-12" value="@Model.CarModel" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarYear"></label>
                <input asp-for="CarYear" class="form-control col-md-12" value="@Model.CarYear" />
                <span asp-validation-for="CarYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img style="width: 200px;" class="card-img-top" src="@Model.PictureUrl" alt="Car picture" />
            </div>
        </fieldset>
        <button type="submit" class="btn btn-danger text-center mt-2">Delete Product</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
