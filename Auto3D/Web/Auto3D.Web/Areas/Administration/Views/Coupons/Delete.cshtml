@model Auto3D.Web.ViewModels.Coupons.CouponDeleteViewModel


@{ this.ViewData["Title"] = "Delete Coupon"; }
<div class="row justify-content-center">
    <form asp-area="Administration" asp-controller="Coupons" asp-action="Delete" method="post" class="text-center col-md-4">
        <h4>@this.ViewData["Title"]</h4>
        <hr />
        <fieldset disabled="">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control col-md-12" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input asp-for="Discount" class="form-control col-md-12" value="@Model.Discount" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </fieldset>
            <button type="submit" class="btn btn-danger text-center mt-2">Delete Car</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
