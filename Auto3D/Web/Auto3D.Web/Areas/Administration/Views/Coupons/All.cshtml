@model IEnumerable<Auto3D.Web.ViewModels.Coupons.CouponViewModel>
@{ ViewData["Title"] = "All Coupons"; }

<div class="container">
    <h3 class="text-center">@this.ViewData["Title"] <a type="button" class=" btn btn-primary" asp-area="Administration" asp-controller="Coupons" asp-action="Create">Create Coupon</a></h3>
    @if (Model.Any())
    {
<table class="table table-hover" style="width: 100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th scope="col" class="text-center">Edit</th>
            <th scope="col" class="text-center">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => coupon.Name)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => coupon.Discount)
    </td>

    <td>
        <div class="row justify-content-center">
            <a class="btn btn-block btn-primary text-white mb-3" style="width: 150px" asp-area="Administration" asp-controller="Coupons" asp-action="Edit" asp-route-id="@coupon.Id">Edit</a>
        </div>
    </td>
    <td>
        <div class="row justify-content-center">
            <a class="btn btn-block btn-info text-white mb-3" style="width: 150px" asp-area="Administration" asp-controller="Coupons" asp-action="Delete" asp-route-id="@coupon.Id">Delete</a>
        </div>
    </td>

</tr>
}
    </tbody>
</table> }
else
{
<div class="jumbotron">
    <p class="text-center">
        <em class="text-muted">No coupons added.</em>
    </p>
</div>}

</div>