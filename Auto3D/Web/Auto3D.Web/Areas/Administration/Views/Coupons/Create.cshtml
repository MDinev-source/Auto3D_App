@model Auto3D.Web.ViewModels._AdministratorInputModels.Coupons.CouponCreateInputModel

@{ this.ViewData["Title"] = "Create Car";}

    <div class="container">
        <div class="row justify-content-center">
            <form enctype="multipart/form-data" asp-area="Administration" asp-controller="Coupons" asp-action="Create" method="post" class="text-center col-md-4">

                <div asp-validation-summary="All" class="text-danger"></div>

                <h4>@this.ViewData["Title"]</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control col-md-12" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount"></label>
                    <input asp-for="Discount" class="form-control col-md-12" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Coupon</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
