@model Auto3D.Web.ViewModels.Cars.CarDeleteViewModel


@{ this.ViewData["Title"] = "Delete Car"; }
<div class="row justify-content-center">
    <form asp-area="Administration" asp-controller="Cars" asp-action="Delete" method="post" class="text-center col-md-4">
        <h4>@this.ViewData["Title"]</h4>
        <hr />
        <fieldset disabled="">
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control col-md-12" value="@Model.Model" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control col-md-12" value="@Model.Year" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img style="width: 200px;" class="card-img-top" src="@Model.PictureUrl" alt="Car picture" />
            </div>
        </fieldset>
            <button type="submit" class="btn btn-danger text-center mt-2">Delete Car</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
