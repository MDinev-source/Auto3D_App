@model Auto3D.Web.ViewModels._AdministratorInputModels.Cars.CarCreateInputModel

@{ this.ViewData["Title"] = "Create Car";}

    <div class="container">
        <div class="row justify-content-center">
            <form enctype="multipart/form-data" asp-area="Administration" asp-controller="Cars" asp-action="Create" method="post" class="text-center col-md-4">
                <input type="hidden" asp-for="@Model.BrandId" value="@Model.BrandId" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <h4>@this.ViewData["Title"]</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control col-md-12" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control col-md-12" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PictureUrl"></label>
                    <input asp-for="PictureUrl" class="form-control-file" />
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Brand</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
