@model Auto3D.Web.ViewModels._AdministratorInputModels.CarBrands.CarBrandCreateInputModel

@{ this.ViewData["Title"] = "Create Car Brand";}

    <div class="container">
        <div class="row justify-content-center">
            <form enctype="multipart/form-data" asp-area="Administration" asp-controller="CarBrands" asp-action="Create" method="post" class="text-center col-md-4">

                <div asp-validation-summary="All" class="text-danger"></div>

                <h4>@this.ViewData["Title"]</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control col-md-12" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Logo"></label>
                    <input asp-for="Logo" class="form-control-file" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Brand</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
