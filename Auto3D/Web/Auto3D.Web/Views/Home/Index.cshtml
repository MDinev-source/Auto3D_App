@{
    this.ViewData["Title"] = "Home Page";
}

@section Styles{
    <link href="@Url.Content("~/css/sideNav.css")" rel="stylesheet" type="text/css" />
}


<div class="position-relative overflow-hidden p-3 p-md-3 m-md-3 text-center bg-light" id="zero" style="background: #EEF2FF; ">
    <div class="col-md-10 p-lg-1 mx-auto mt-2 text-dark ">
        <h3>Enjoy @GlobalConstants.SystemName and find out best 3D printing solutions!  <button class="btn btn-primary">Learn more</button></h3>
    </div>

    <div class="col-md-12 p-lg-1 mx-auto mb-5 text-white">
        <cache expires-after="@TimeSpan.FromHours(3)">
