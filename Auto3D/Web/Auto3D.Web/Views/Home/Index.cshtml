@{ this.ViewData["Title"] = "Home Page"; }

@section Styles{
    <link href="@Url.Content("~/css/sideNav.css")" rel="stylesheet" type="text/css" />
}


<div class="position-relative overflow-hidden pt-3 p-md-3 mb-2 text-center bg-light" id="zero" style="background: white !important; ">
