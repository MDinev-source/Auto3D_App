            <partial name="_CarouselPartial" />
        </cache>
    </div>
</div>

<hr class="mb-2" />
<partial name="_CarBrandsPartial" />

<hr class="mt-2" />
<partial name="_TopPartsPartial" />

<hr />
<partial name="_PartnerLogosPartial" />

<hr />
<partial name="_ContactFormPartial" />

<partial name="_SideNavPartial" />

